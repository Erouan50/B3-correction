<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/quoteText" android:layout_gravity="left|center_vertical" android:textSize="12pt"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quoteDate" android:layout_gravity="right|center_vertical" android:paddingTop="5pt"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quoteRatingBar" android:layout_gravity="center"
            android:numStars="5" android:stepSize="1" android:paddingTop="5pt" android:paddingBottom="5pt"
            android:rating="0"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="bottom">
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel_quote_activity"
                android:id="@+id/quoteCancel" android:layout_weight="2"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ok_quote_activity"
                android:id="@+id/quoteOk" android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>